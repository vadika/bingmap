# Production Environment Configuration

# External port for the service
EXTERNAL_PORT=8113

# Number of worker processes (adjust based on CPU cores)
WORKERS=4

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Resource limits for tile server
CPU_LIMIT=2
MEMORY_LIMIT=1G
CPU_RESERVATION=1
MEMORY_RESERVATION=512M

# Resource limits for nginx
NGINX_CPU_LIMIT=1
NGINX_MEMORY_LIMIT=512M

# Cache settings (optional, for future implementation)
CACHE_SIZE=100M
CACHE_TTL=3600